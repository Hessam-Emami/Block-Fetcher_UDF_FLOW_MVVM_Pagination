<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BlockFetcher" parent="Theme.Base.BlockFetcher">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/windows_blue</item>
        <item name="colorPrimaryVariant">@color/blue_material_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dodger_blue_22</item>
        <item name="colorSecondaryVariant">@color/dodger_blue_22</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorControlHighlight">@drawable/color_primary_alpha_10</item>
        <!-- Other       -->
        <item name="colorOnError">@color/white</item>

        <item name="android:colorBackground">@color/light_dark</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/light_dark</item>
        <item name="colorOnSurface">@color/white</item>

    </style>
</resources>